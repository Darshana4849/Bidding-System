<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<servlet>
	<servlet-name>AddContact</servlet-name>
	<servlet-class>servlet.AddContact</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>AddContact</servlet-name>
	<url-pattern>/addcon</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>Login</servlet-name>
	<servlet-class>servlet.Login</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>Login</servlet-name>
	<url-pattern>/conlog</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>AdminContact</servlet-name>
	<servlet-class>servlet.AdminContact</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>AdminContact</servlet-name>
	<url-pattern>/conadmin</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>SingleDataButton</servlet-name>
	<servlet-class>servlet.SingleDataButton</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>SingleDataButton</servlet-name>
	<url-pattern>/singlebutton</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>UpdateContact</servlet-name>
	<servlet-class>servlet.UpdateContact</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>UpdateContact</servlet-name>
	<url-pattern>/update</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>DeleteContact</servlet-name>
	<servlet-class>servlet.DeleteContact</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>DeleteContact</servlet-name>
	<url-pattern>/delete</url-pattern>
</servlet-mapping>
    
</web-app>